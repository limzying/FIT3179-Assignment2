{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 500,
    "background":"transparent",
    "title": "Relationship between internet speed and internet price",
    "data": {
        "url": "https://raw.githubusercontent.com/limzying/FIT3179-Assignment2/main/data/worldwide%20internet%20details%202022.csv"
    },
    "params": [
        {
            "name": "continent_selection",
            "bind":{
                "input": "select",
                "options":[
                    null,
                    "Africa",
                    "Asia",
                    "Caribbean",
                    "Central America",
                    "Europe",
                    "North America",
                    "Oceania",
                    "South America"
                ],
                "labels": [
                    "Show All",
                    "Africa",
                    "Asia",
                    "Caribbean",
                    "Central America",
                    "Europe",
                    "North America",
                    "Oceania",
                    "South America"
                ],
                "name": "Select continent: "
            }
        }
    ],
    "transform": [
        {"filter": "continent_selection == null || datum.continental_region == continent_selection"}
    ],
    "encoding": {
        "x": {
            "field": "avg_price_1GB",
            "type": "quantitative",
            "title": "Average price per 1GB ($)",
            "scale":{"domain":[0,26]}
        },
        "y": {
            "field": "avg_speed",
            "type": "quantitative",
            "title": "Average internet speed (Mbit/s)",
            "scale":{"domain":[0,140]}
        }
    },
    "layer":[
        {
            "mark":{
                "type":"circle",
                "size":40
            },
            "encoding":{
                "color": {
                    "field": "continental_region",
                    "type": "nominal",
                    "legend":{"title":"Continental region"},
                    "scale": {
                        "domain": [
                            "Africa",
                            "Asia",
                            "Caribbean",
                            "Central America",
                            "Europe",
                            "North America",
                            "Oceania",
                            "South America"
                        ],
                        "range":[
                            "#8ac926",
                            "#d90429",
                            "#ffdf00",
                            "#ff5400",
                            "#03045e",
                            "#7209b7",
                            "#004b23",
                            "#ffa700"
                        ]
                    }
                },
                "opacity":{
                    "value":0.7
                },
                "tooltip":[
                    {"field": "country_name", "type": "nominal","title":"Country"},
                    {"field": "continental_region", "type": "nominal","title":"Continental region"},
                    {"field": "avg_speed", "type": "quantitative", "title":"Mean internet speed(Mbit/s)"},
                    {"field": "avg_price_1GB", "type": "nominal","title":"Average internet price($)"}
                ]
            }
        },
        {
            "mark":{
                "type": "text",
                "align":"left",
                "baseline":"middle",
                "dx":6,
                "fontSize":12
            },
            "encoding": {
                "text":{"field":"country_name","type":"nominal"},
                "color":{"value":"black"},
                "opacity":{
                    "condition":{
                        "test": "datum['country_name'] == 'Yemen' || datum['country_name'] == 'China' || datum['country_name'] =='South Korea' || datum['country_name'] == 'Australia' || datum['country_name'] =='United Arab Emirates' || datum['country_name'] == 'Palestine' || datum['country_name'] =='New Zealand' || datum['country_name'] == 'United States' || datum['country_name'] == 'Canada'",
                        "value": 1
                    },
                     "value": 0
                },
                "tooltip":[
                    {"field": "country_name", "type": "nominal","title":"Country"},
                    {"field": "continental_region", "type": "nominal","title":"Continental region"},
                    {"field": "avg_speed", "type": "quantitative", "title":"Mean internet speed(Mbit/s)"},
                    {"field": "avg_price_1GB", "type": "quantitative","title":"Average internet price($)"}]
            }
        }
    ]           
}
    
